{
  "name": "indonesia-regions-api",
  "version": "1.0.0",
  "description": "Indonesian Administrative Regions API with official Kepmendagri data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect=0.0.0.0:9229 server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "seed": "node scripts/seed-data.js",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml --env-file .env up --build",
    "docker:dev:detached": "docker compose -f docker/docker-compose.dev.yml --env-file .env up -d --build",
    "docker:dev:down": "docker compose -f docker/docker-compose.dev.yml --env-file .env down -v",
    "docker:dev:logs": "docker compose -f docker/docker-compose.dev.yml --env-file .env logs -f api",
    "docker:dev:shell": "docker compose -f docker/docker-compose.dev.yml --env-file .env exec api sh",
    "docker:dev:db": "docker compose -f docker/docker-compose.dev.yml --env-file .env exec postgres psql -U $POSTGRES_USER -d $POSTGRES_DB",
    "docker:dev:rebuild": "docker compose -f docker/docker-compose.dev.yml --env-file .env up --build --force-recreate",
    "docker:sync": "docker compose -f docker/docker-compose.dev.yml --env-file .env --profile migration run --rm migrator node scripts/migrate-indonesia-regions-incremental.js",
    "docker:sync:provinces-only": "INCLUDE_DISTRICTS=false INCLUDE_VILLAGES=false docker compose -f docker/docker-compose.dev.yml --env-file .env --profile migration run --rm migrator node scripts/migrate-indonesia-regions-incremental.js",
    "seed:dev": "node scripts/seed-development-data.js",
    "test:docker": "docker compose -f docker/docker-compose.dev.yml exec api npm test",
    "docker:prod": "docker compose -f docker/docker-compose.dev.yml --env-file .env.production up --build",
    "docker:test": "docker compose -f docker/docker-compose.dev.yml --env-file .env.testing up --build",
    "env:validate": "node scripts/validate-env.js",
    "env:generate": "node scripts/generate-env.js",
    "migrate:regions": "node scripts/migrate-indonesia-regions.js",
    "migrate:regions:no-villages": "INCLUDE_VILLAGES=false node scripts/migrate-indonesia-regions.js",
    "migrate:regions:sample": "VILLAGE_LIMIT=100 node scripts/migrate-indonesia-regions.js",
    "sync:regions": "node scripts/sync-indonesia-regions.js",
    "sync:regions:provinces-only": "INCLUDE_DISTRICTS=false INCLUDE_VILLAGES=false node scripts/sync-indonesia-regions.js",
    "sync:regions:no-villages": "INCLUDE_VILLAGES=false node scripts/sync-indonesia-regions.js",
    "sync:regions:sample": "DISTRICT_LIMIT=5 VILLAGE_LIMIT=100 node scripts/sync-indonesia-regions.js",
    "check:new-data": "node scripts/check-for-new-data.js",
    "cron:daily-sync": "node scripts/sync-indonesia-regions.js",
    "cron:weekly-full-sync": "node scripts/migrate-indonesia-regions.js"
  },
  "keywords": [
    "indonesia",
    "regions",
    "api",
    "wilayah",
    "kemendagri",
    "indonesia regions",
    "indonesia wilayah"
  ],
  "author": "npkdigitech",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
