{
  "name": "indonesia-regions-api",
  "version": "1.0.0",
  "description": "Indonesian Administrative Regions API with official Kepmendagri data",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect=0.0.0.0:9229 server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "format": "prettier --write .",
    "seed": "node scripts/seed-data.js",
    "docker:dev": "docker compose -f docker/docker-compose.dev.yml --env-file .env up --build",
    "docker:dev:detached": "docker compose -f docker/docker-compose.dev.yml --env-file .env up -d --build",
    "docker:dev:down": "docker compose -f docker/docker-compose.dev.yml --env-file .env down -v",
    "docker:dev:logs": "docker compose -f docker/docker-compose.dev.yml --env-file .env logs -f api",
    "docker:dev:shell": "docker compose -f docker/docker-compose.dev.yml --env-file .env exec api sh",
    "docker:dev:db": "docker compose -f docker/docker-compose.dev.yml --env-file .env exec postgres psql -U $POSTGRES_USER -d $POSTGRES_DB",
    "docker:dev:rebuild": "docker compose -f docker/docker-compose.dev.yml --env-file .env up --build --force-recreate",
    "seed:dev": "node scripts/seed-development-data.js",
    "test:docker": "docker compose -f docker/docker-compose.dev.yml exec api npm test",
    "docker:prod": "docker compose -f docker/docker-compose.dev.yml --env-file .env.production up --build",
    "docker:test": "docker compose -f docker/docker-compose.dev.yml --env-file .env.testing up --build",
    "env:validate": "node scripts/validate-env.js",
    "env:generate": "node scripts/generate-env.js"
  },
  "keywords": ["indonesia", "regions", "api", "wilayah", "kemendagri", "indonesia regions", "indonesia wilayah"],
  "author": "npkdigitech",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.11.3",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3"
  }
}
