COMPOSE_PROJECT_NAME=indonesia-regions-api

NODE_ENV=development
APP_PORT=3000
DEBUG_PORT=9229
LOG_LEVEL=debug

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=indonesia_regions_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

INCLUDE_VILLAGES=true
VILLAGE_LIMIT=10000
MIGRATION_LOG_LEVEL=info

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

PGADMIN_PORT=8080
PGADMIN_DEFAULT_EMAIL=admin@indonesiaregions.dev
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

API_KEY=your_api_key_here
JWT_SECRET=your_very_long_jwt_secret_here

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000

NETWORK_SUBNET=192.168.100.0/24

# npm run env:generate
# or
# node scripts/generate-env.js
